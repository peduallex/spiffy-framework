{
    "name": "spiffy/spiffy-framework",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Spiffy\\Framework is a full-stack framework for PHP built from light weight components and 100% HHVM compatible.",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.4",
        "spiffy/spiffy-dispatch": "~1.0-dev",
        "spiffy/spiffy-event": "~1.0-dev",
        "spiffy/spiffy-inject": "~1.0-dev",
        "spiffy/spiffy-package": "~1.0-dev",
        "spiffy/spiffy-route": "~1.0-dev",
        "spiffy/spiffy-view": "~1.0-dev",
        "spiffy/spiffy-view-twig": "~1.0-dev",

        "symfony/console": "~2.4",
        "symfony/finder": "~2.4",
        "symfony/http-foundation": "~2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Spiffy\\Framework\\": [
                "src/",
                "test/"
            ],
            "Spiffy\\Framework\\TestAsset\\TestPackage\\": [
                "test/TestPackage/src"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    }
}
